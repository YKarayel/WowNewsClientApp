<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">


        <TextView
            android:id="@+id/titledb"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:fontFamily="@font/tradegothicbold"
            android:lineSpacingExtra="8dp"
            android:textColor="#FFFFFF"
            android:textSize="21sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_urldb"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/datedb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/tradegothicbold"
            android:text="tarih"
            android:textColor="#6f6d60"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_urldb" />

        <ImageView
            android:id="@+id/image_urldb"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="6dp"
            android:clickable="true"
            android:contentDescription="@string/post_images"
            android:scaleType="centerCrop"
            app:cornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageButton
            android:id="@+id/deletebtn"
            android:layout_width="35dp"
            android:layout_height="38dp"
            android:layout_marginEnd="15dp"
            android:background="@color/transparent"
            android:clickable="true"
            android:contentDescription="@string/savebtn"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/savedpressed"
            android:stateListAnimator="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>